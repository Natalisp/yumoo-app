<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui blue header">
      <div class="content">
        Signup to create account
      </div>
    </h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :username, placeholder: "username", autofocus: true %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="mail icon"></i>
            <%= f.email_field :email, placeholder: "email" %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, placeholder: "password", autocomplete: "off" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="field">
          <div class="">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
        <% end %>

      </div>

      <%= f.submit class: "actions ui fluid large blue submit button"%>
    <% end %>
  </div>
</div>

<style type="text/css">
  .column {
    width: 100%;
    max-width: 400px;
  }

  form .input {
    /*border: 1px soild red;*/
    width: 100% !important;
    margin-bottom: 1em;
  }
</style>